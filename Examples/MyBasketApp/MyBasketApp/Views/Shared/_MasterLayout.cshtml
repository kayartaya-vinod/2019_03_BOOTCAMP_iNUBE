@using MyBasketApp.Models

@{
    Layout = null;
    Customer cust = (Customer) HttpContext.Current.Session["customer"];
    var CustomerName = "Guest";
    if (cust != null)
    {
        CustomerName = cust.Name;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyBasket</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" />
    <link rel="stylesheet" type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img style="width: 50px; height: 50px;"
                     src="@Url.Content("~/assets/images/shopping-basket.png")" /> MyBasket
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                
                                <a class="nav-link" href="/Customer/Logout">Welcome @(CustomerName). Logout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Customer/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Customer/Register">Register</a>
                            </li>
                        </ul>
                    }
                }
            </div>
        </div>
    </nav>
    <div class="container">

        @RenderBody()

    </div>
    <script src="@Url.Content("~/Scripts/jquery-3.0.0.js")" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
</body>
</html>
