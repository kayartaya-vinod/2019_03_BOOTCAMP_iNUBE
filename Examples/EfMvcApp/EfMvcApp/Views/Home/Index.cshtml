@using EfMvcApp.Models

@model List<Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List of all products</title>
    <link rel="stylesheet" type="text/css" 
          href="@Url.Content("~/Content/bootstrap.css")" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                @Html.Action("AddNewProduct")
            </div>
            <div class="col-md-7">


                <h1>List of all products</h1>
                <hr />
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Product description</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Unit price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product p in Model)
                        {
                            <tr>
                                <td>
                                <img src="@(p.Picture!=null && 
                                    p.Picture.Substring(0, 4).Equals("http")? 
                                    p.Picture: "/products/"+p.Picture)" alt="@p.Name"
                                     style="width: 75px; height: 75px;" />
                                @p.Description</td>
                                <td>@p.Brand.Name</td>
                                <td>@p.Category.Name</td>
                                <td>@p.UnitPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</body>
</html>
