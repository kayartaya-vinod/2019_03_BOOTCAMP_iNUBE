@using HelloWorldMvcApp.Models

@{
    Layout = "~/Views/Employee/Common/PageLayout.cshtml";
    ViewBag.Title = "Add a new employee data";
}
<form class="form-horizontal" method="post" onsubmit="return validateEmployeeForm()">
    <div class="form-group">
        <label class="col-md-3" for="emp_id">Enter id</label>
        <div class="col-md-5">
            <input id="emp_id" name="id" class="form-control"
                   placeholder="1234" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3" for="emp_name">Enter name</label>
        <div class="col-md-5">
            <input id="emp_name" name="name" class="form-control"
                   placeholder="John Doe" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3">Select gender</label>
        <div class="col-md-5">
            <label>
                <input type="radio" name="gender" value="Male" />
                Male
            </label>
            <label>
                <input type="radio" name="gender" value="Female" />
                Female
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3" for="emp_city">Enter city</label>
        <div class="col-md-5">
            <input id="emp_city" name="city" class="form-control"
                   placeholder="Bangalore" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3" for="emp_email">Enter email address</label>
        <div class="col-md-5">
            <input id="emp_email" name="email" class="form-control"
                   placeholder="you@example.com" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3" for="emp_salary">Enter salary</label>
        <div class="col-md-5">
            <input id="emp_salary" name="salary" class="form-control"
                   placeholder="23500.0" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5 col-md-offset-3">
            <button class="btn btn-primary">Save details</button>
            @Html.ActionLink("Cancel", "List", "Employee")
            
            <div id="errMsgs"></div>

        </div>
    </div>
</form>
